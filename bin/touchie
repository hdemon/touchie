#!/usr/bin/env ruby
require 'pathname'
$:.unshift Pathname.new(__FILE__).realpath.join('../../lib') if $0 == __FILE__
require 'thor'
require "touchie"

module Touchie
  class Command < Thor
    desc "odd", "search odd size images"
    def odd(path)
      image_paths = Dir.glob(path)
      found = Touchie.find_odd_size_images(image_paths)

      found.each do |path|
        puts path
      end
      puts found.length.to_s + " files are found!"
    end
  end
end

Touchie::Command.start
